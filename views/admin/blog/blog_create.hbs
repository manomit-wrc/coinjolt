                    </div>
                </div> --}}


                 <div class="col-md-2 col-md-offset-5">
                    <div class="form-group">
                        <input class="btn btn-primary save_blog" id="save_blog" value="Create Post" type="button">
                    </div>
                </div>
              </div>

              </form>

            </div>
          </div>
        </div>
    <!-- Ends email-marketing -->
</section>
