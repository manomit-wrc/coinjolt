<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="title-with-btn pd-612">
       <div class="pull-left">
        <h1>Terms Of Service</h1>
    </div>
    <div class="clearfix"></div>
</div>

<ol class="breadcrumb">
  <li>
    <a href="/dashboard">
      <i class="fa fa-dashboard"></i> Home</a>
  </li>
  <li class="active">Terms Of Service</li>
</ol>
</section>

<div class="loader"></div>

<!-- Main content -->
<section class="content container-fluid">
    <!-- Starts email-marketing -->
            <div class="email-marketing">
          <div class="box box-primary">
            <div class="box-body">
                <form name="terms_of_service_form" id="terms_of_service_form" action="" method="POST" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Banner Image Title: </label>
                    <input type="text" class="form-control input-lg" id="banner_image_title" name="banner_image_title" placeholder="Enter Banner Image Title" value="{{terms_of_service.terms_of_service_header_desc}}">
                  </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="banner_image">Upload Banner Image</label>
                        <input name="banner_image" class="form-control" id="banner_image" type="file">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Body">Terms Of Service Body</label>
                        <textarea name="terms_of_service_body" class="form-control" id="terms_of_service_body" placeholder="Enter Terms Of Service Body">{{terms_of_service.terms_of_service_content}}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-success save_terms_of_service">Save</button>
                    </div>
                </div>
                
              </div>

              </form>

            </div>
          </div>
        </div>
    <!-- Ends email-marketing -->
</section>
<!-- /.content -->

