  <script>
    $(document).ready(function () {

      //var baseURL = "http://ec2-54-224-110-112.compute-1.amazonaws.com/";
      var baseURL = "https://www.coinjolt.com/";

      $('.login-box-body').show();
      $('.login-box-body').animate({
        'top': '0px'
      }, 500);

      var pathArray = window.location.pathname.split( '/' );
      var secretKey = pathArray[2];

       $(".alert").fadeTo(2000, 500).slideUp(500, function(){
            $(".alert").slideUp(500);
        });
       $("#updatePasswordFrm").validate({
            rules: {
                password: {
                    required: true
                },
                confirmPassword: {
                    required: true,
                    equalTo: "#password"
                }
            },
            messages: {
                password: {
                    required: "Please enter password"
                },
                confirmPassword: {
                    required: "Please enter confirm password",
                    equalTo: "Should be match with password"
                }
            },
            submitHandler:function(form) {
                  $.ajax({
                        type: "POST",
                        url: "/update-password2",
                        data: {
                            passWord: $("#password").val(),
                            forgot_key: secretKey
                        },
                        beforeSend: function() {
                            $(".loader-gif").show();
                        },
                        success:function(response) {
                            $(".loader-gif").hide();
                            if(response.status === 1){

                              $("#errMessages").removeClass("alert alert-danger");
                              $("#errMessages").html("");

                              $("#errMessages").addClass("alert alert-success");
                              $("#errMessages").html(response.msg);

                              setTimeout(function () {
                                window.location.href = baseURL+"/login";
                              }, 4000); 
                            }
                            else if(response.status === 2){
                              $("#errMessages").removeClass("alert alert-success");
                              $("#errMessages").html("");

                              $("#errMessages").addClass("alert alert-danger");
                              $("#errMessages").html(response.msg);
                            }
                        },
                        error: function(xhr) {
                            $(".loader-gif").hide();
                        }
                    });
            }
        });
    });
  </script>
