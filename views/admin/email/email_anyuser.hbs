              </div> --}}

                <div class="col-md-2 col-md-offset-5">
                    <div class="form-group">
                        <input class="btn btn-primary" type="button" id="emailAnyusersBtn" value="Send Emails" />
                    </div>
                </div>

              </div>

              

              </form><br><br>

                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Most recent activity (last emails sent): </label>
                      </div>
                    </div>
                    <div class="col-md-12">
                        <div class="email-marketing-view-scroll email_anyuser">
                          <div class="table-responsive no-padding">
                            <table class="table table-hover">
                              <tbody>
                                <tr>
                                  <th>Email Subject</th>
                                  {{!-- <th>Email Description</th> --}}
                                  <th>Email Address</th>
                                  {{!-- <th>Action</th> --}}
                                </tr>

                                {{#each mailList}}
                                <tr>
                                  <td> {{this.email_sub}}</td>
                                 {{!--  <td class="emailContent">{{{this.email_desc}}}</td> --}}
                                  <td>{{this.send_email_address}}</td>  
                                </tr>
                                {{/each}}

                              </tbody>
                            </table>
                          </div>
                        </div>
                  </div>
                </div>
            </div>
          </div>
        </div>
    <!-- Ends email-marketing -->
