          <label>Bank Name:</label><br>
          <input type="text" class="form-control" placeholder="Bank of Nova Scotia" name="bankname" id="bankname" value="{{bankWireTransferDetails.bank_name}}" readonly>
        </div>
        <div class="form-group">
          <label>Account Name:</label><br>
          <input type="text" class="form-control" placeholder="Kano Investments Inc" name="accountnumber" id="accountnumber"  value="{{bankWireTransferDetails.account_name}}" readonly>
        </div>
        <div class="form-group">
          <label>Bank Address:</label><br>
          <input type="text" class="form-control" placeholder="11666 Steveston Hwy #3020, Richmond, BC, V7A 5J3" name="bankaddress" id="bankaddress" value="{{bankWireTransferDetails.bank_address}}" readonly>
