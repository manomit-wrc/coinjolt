  <div class="login-box">
    <!-- /.login-logo -->
    <div class="login-box-body" style="display: none; top: -70px;">
      <form action="javascript:void(0)" name="twoFactorAuthFormLogin" id="twoFactorAuthFormLogin" method="post">
        <img src="/dist/img/logo-icon.png" alt="logo">
        <h4 style="color: #000;">Welcome to Two Factor Authentication Verification</h4>

        <div class="form-group has-feedback">
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          <input type="password" class="form-control" placeholder="Two factor authentication secret key" id="two_factor_auth_user_secret_key" name="two_factor_auth_user_secret_key">
        </div>
      
      <!-- /.social-auth-links -->

        <div class="sgn-main">
          
          <button type="submit" class="btn btn-primary btn-block btn-flat" id="verify">Verify</button>
        </div>
      </form>
    </div>
    <!-- /.login-box-body -->
  </div>
  <!-- /.login-box -->

  <!-- jQuery 3 -->
  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/additional-methods.js"></script>
  <!-- Bootstrap 3.3.7 -->
  <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <!-- iCheck -->
  <script src="/plugins/iCheck/icheck.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></
  <script>
    $(function () {
      $('input').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%' /* optional */
      });
    });
  </script>
  <script>
    $(document).ready(function () {
      $('.login-box-body').show();
      $('.login-box-body').animate({
        'top': '0px'
      }, 500);

       $(".alert").fadeTo(2000, 500).slideUp(500, function(){
            $(".alert").slideUp(500);
        });

       $('#verify').on('click', function () {
        var valid = $('#twoFactorAuthFormLogin').valid();
        if(valid) {
          var user_token = $('#two_factor_auth_user_secret_key').val();
          $.ajax({
            type: "POST",
            url: '/two_factor_auth_checking_for_login',
            data:{
              user_token: user_token
            },
            success: function (resp) {
              if(resp.status == true) {
                window.location.href = '/login_again';
              }
              if(resp.status == false) {
                $('#two_factor_auth_user_secret_key').val('');
                swal("Oh no!", "Two factor authentication verified failed. Please enter the sectret key again.");
              }
            }
          });
        }
       });

       $("#twoFactorAuthFormLogin").validate({
            rules: {
                two_factor_auth_user_secret_key: {
                    required: true
                }
            },
            messages: {
                two_factor_auth_user_secret_key: {
                    required: "Please enter two factor authentication secret key."
                }
            }
        });
    });
  </script>
