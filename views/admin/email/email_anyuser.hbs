<div class="loader"></div>

<!-- Main content -->
<section class="content container-fluid">
    <!-- Starts email-marketing -->
            <div class="email-marketing">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Email Any Users</h3>
            </div>
            <div class="box-body">
                <form name="email_anyusers_form" id="email_anyusers_form" action="" method="POST">
             
              <div class="row">
                
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Subject Line: </label>
                    <input type="text" class="form-control input-lg" id="email_users_subject_line" name="email_users_subject_line" placeholder="Enter Subject Line">
                  </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Body">Body</label>
                        <textarea name="email_users_subject_body" class="form-control" id="email_users_subject_body" placeholder="Enter Body"></textarea>
                    </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label>Email Addresses: </label>
                  
                    <textarea name="email_addresses_users" class="form-control" id="email_addresses_users" placeholder="Enter Email Addresses separated by comma"></textarea>
                  </div>
                </div>

