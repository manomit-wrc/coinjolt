<section class="content-header">
	<h1>Manage Withdrawals</h1>
	<ol class="breadcrumb">
		<li>
			<a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li class="active">Manage Withdrawals</li>
	</ol>
</section>

<section class="content container-fluid">
	<!-- Starts Deposit Funds -->
	<div class="deposit-funds">
		<div class="row">
			<div class="col-md-12">
				<div class="box">
					<div class="box-header with-border floating-header">
						<h3 class="box-title pull-left">Pending Withdrawals List</h3>
						<a href="/admin/pending-withdrawals-history"  class="btn btn-primary pull-right">History</a>
						<div class="clearfix"></div>
					</div>
					<div class="box-body">
						<table id="pending_withdrawals_table" class="table table-striped res-table pnding_withdwal_tbl">
							<thead>
								<tr>
									<th>ID</th>
									<th>Name</th>
									<th>Amount</th>
									<th>Date</th>
									<th>Type</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								{{#each all_data}}
								<tr>
									<td>{{this.id}}</td>
									<td>{{this.User.first_name}} {{this.User.last_name}}</td>
									<td>{{this.amount_usd}}</td>
									<td>{{dateFormat this.createdAt "MM-DD-YY"}}</td>
									<td>
										{{#if_eq this.withdraw_type 1}}
										Bank Wire Transfer
										{{/if_eq}}
										{{#if_eq this.withdraw_type 2}}
										Check by Mail
										{{/if_eq}}
										{{#if_eq this.withdraw_type 3}}
										MCP Withdraw
										{{/if_eq}}
									</td>
									<td>
										<button class="btn approve-req pending_withdrawals_approved btn-success" data-value="{{this.id}}" data-user_id="{{this.user_id}}" data-amount="{{this.amount_usd}}" data-wtype="{{this.withdraw_type}}">Approve</button>
										<button class="btn reject-req pending_withdrawals_reject btn-danger" data-value="{{this.id}}">Reject</button>
									</td>
								</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<!-- /.box-body -->
		</div>
		<!-- /.box -->
	</div>
	<!-- Ends Deposit Funds -->
</section>