<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>Buy and Sell Digital Currencies</h1>
  <ol class="breadcrumb">
    <li>
      <a href="#">
        <i class="fa fa-dashboard"></i> Home</a>
    </li>
    <li class="active">Buy and Sell Coins</li>
  </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
  <div class="buy-sell">
    <div class="row">
      <div class="col-md-12">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title">Open Positions Instantly With ZERO Fees</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="row">
              <div class="col-md-6">
                <form action="/buy-coin" method="post" class="p-l-20">
                  <div class="form-group">
                    <label>Buy</label>

                    <select class="form-control" id="currency_purchased" name="currency_purchased">
                      <option value="">Please select a option</option>
                      {{#each contents}}
                      <option value="{{this.alt_name}}">{{this.currency_id}}</option>
                      {{/each}}
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="">USD</label>
                    <input type="text" class="form-control" name="payAmount" id="payAmount" placeholder="Enter USD Value">
                  </div>

                  <p class="expected" style="display:none;" role="alert"></p>

                  <div class="" id="currentratetext" role="alert">

                  </div>
                  <div class="" id="calculatedamount" role="alert">

                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-3">
                        <input type="hidden" id="coinRate" name="coinRate" value="" />
                        <input type="hidden" id="sell_coinRate" name="sell_coinRate" value="" />
                        <input type="hidden" name="sell_converted_amount" id="sell_converted_amount">
                        <input class="btn btn-block btn-primary" id="cc-submit" type="submit" value="Buy" />
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <div class="col-md-6">
                <form action="" method="post" class="p-r-20">
                  <div class="form-group">
                    <label>Sell</label>
                    <select class="form-control" id="currency_sold" name="currency_sold">
                      <option value="">Please select a option</option>
                      {{#each contents}}
                      <option value="{{this.alt_name}}">{{this.currency_id}}</option>
                      {{/each}}
                    </select>
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" id="sellAmount" name="sellAmount" placeholder="Enter Amount of Coin">
                  </div>
                  <p class="sell_expected" style="display:none;" role="alert"></p>
                  <div class="" id="sell_currentratetext" role="alert">

                  </div>
                  <div class="" id="sell_calculatedamount" role="alert">

                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-3">
                        <input id="cc-submit1" class="btn btn-block btn-primary" type="submit" value="Sell" />
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
    </div>
    <!-- Starts Balance & Most Recent Activity  -->
    <div class="balnrecent">
      <div class="row">
        <div class="col-md-6">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Balance</h3>
            </div>
            <div class="box-body">
              <div class="row">
                <div class="col-md-4">
                  <div class="chart-responsive">
									  <div class="chart" id="sales-chart" style="height: 300px; position: relative;"></div>
									</div>
                </div>
                <div class="col-md-8">
                    <table class="table scroll-minus">
                        <thead>
                            <tr>
                                <th>SYMBOL</th>
                                <th>NAME</th>
                                <th>BALANCE</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="scroll-dashboard" style="height: 445.15px;">
                        <table class="table">
                            <tr>
                                <td>
                                    <img src="http://dev.coinjolt.com/dashboard/img/usd.png" alt="">
                                </td>
                                <td>DOLLAR <span style="color:red;">(USD)</span></td>
                                <td>
                                    {{twoDecimalPoint user.currentUsdBalance}}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="http://dev.coinjolt.com/dashboard/img/usd.png" alt="">
                                </td>
                                <td>MANAGED PORTFOLIO<span style="color:red;">(MCP)</span></td>
                            </tr>
                            {{#each user.currency}}
                            <tr>    
                                <td class="s-s-{{toLowerCase this.display_name}} currency-logo-sprite">
                                    
                                </td>
                                <td>{{this.display_name}} <span style="color:red;">({{toUpperCase this.alt_name}})</span></td>
                                <td class="wallet_crp">
                                        {{twoDecimalPoint (checkCurrencies this.alt_name ../user.currencyBalance)}}
                                </td>
                            </tr>
                            {{/each}}

                        </table>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Most Recent Activity</h3>
            </div>
            <div class="box-body">

              <div class="table-responsive">
                <table class="table">
                  <tbody>
                    <tr>
                      <th>Currency</th>
                      <th>Rate</th>
                      <th>USD</th>
                      <th>Amount</th>
                      <th>Type</th>
                      <th>Date</th>
                    </tr>
                    {{#each currencyCodes}}
                    <tr>
                        <td>{{this.Currency.currency_id}}</td>
                        <td>${{formatCurrency (twoDecimalPoint this.current_rate)}}</td>
                        <td>${{formatCurrency (fiveDecimalPoint this.amount)}}</td>
                        <td>{{fiveDecimalPoint this.converted_amount }}</td>
                        <td>{{#if_eq this.type '1'}}
                            Buy 
                            {{else}}
                            Sell
                            {{/if_eq}}</td>
                        <td>{{dateFormat this.createdAt "DD-MM-YYYY h:mm:ss a"}}</td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Ends Balance & Most Recent Activity  -->
    <!-- Starts Market Pricing Graph -->
    <div class="market-pricing-graph">
      <div class="row">
        <div class="col-md-12">
          <!-- BAR CHART -->
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Market Pricing Graph</h3>
            </div>
            <div class="box-body">
              <div class="chart">
                <canvas id="barChart1" style="height:230px"></canvas>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

        </div>
      </div>

    </div>
    <!-- Ends Market Pricing Graph -->
    <!-- Starts Market Capitalization Graph -->
    <div class="market-capitalization-graph">
      <div class="row">
        <div class="col-md-12">
          <!-- BAR CHART -->
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Market Capitalization Graph</h3>
            </div>
            <div class="box-body">
              <div class="chart">
                <canvas id="barChart2" style="height:230px"></canvas>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

        </div>
      </div>
    </div>
    <!-- Ends Market Capitalization Graph -->
  </div>
</section>
<!-- /.content -->