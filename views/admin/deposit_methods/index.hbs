<section class="content-header">
	<h1>Manage Deposit Methods</h1>
	<ol class="breadcrumb">
		<li>
			<a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a>
		</li>
		<li class="active">Manage Deposit Methods</li>
	</ol>
</section>

<section class="content container-fluid">
	<!-- Starts Deposit Funds -->
	<div class="deposit-funds">
		<div class="row">
			<div class="col-md-12">
				<div class="box">
					<div class="box-header with-border">
						<h3 class="box-title">Manage Deposit Methods List</h3>
					</div>
					<div class="box-body">
						<table id="pending_transactions_table" class="table table-striped res-table">
							<thead>
								<tr>
									<th>ID</th>
									<th>Deposit Method Name</th>
									<th>Status</th>
                                    <th>Action</th>
								</tr>
							</thead>
							<tbody>
								{{#each deposit_methodsData}}
								<tr>
									<td>{{this.id}}</td>
                                    <td>{{this.method_name}}</td>
                                    <td>{{#if_eq this.status '1'}} Enabled {{else}} Disabled {{/if_eq}}</td>
                                    <td>
                                        {{#if_eq this.status '1'}}
                                            <button class="btn deposit_disable btn-danger" type="button" value="{{this.id}}">Click To Disable</button>
                                        {{else}}
                                            <button class="btn deposit_enable btn-success" type="button" value="{{this.id}}">Click To Enable</button>
                                        {{/if_eq}}
                                    </td>
								</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<!-- /.box-body -->
		</div>
		<!-- /.box -->
	</div>
	<!-- Ends Deposit Funds -->
</section>