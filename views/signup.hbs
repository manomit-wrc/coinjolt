<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Coinjolt | Sign Up</title>
  <!-- Favicon-->
  <link rel="shortcut icon" href="/dist/img/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/dist/img/favicon.ico" type="image/x-icon">
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Style -->
  <link rel="stylesheet" href="/dist/css/style.css">
  <!-- Bootstrap 3.3.7 -->
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="/bower_components/Ionicons/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
  <!-- iCheck -->
  <link rel="stylesheet" href="/plugins/iCheck/square/blue.css">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->

<!-- Google Font -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
  <header>
    <div class="header-top">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="logo">
              <a href="/">
                <img src="/dist/img/logo.png" alt="logo">
              </a>
            </div>
          </div>
          <div class="col-md-9">
            <div class="top-menu pull-right">
              <ul>
                  <li>
                      <a href="/">Sign In</a>
                    </li>
                    <li>
                      <a href="/signup">Create Account</a>
                    </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="login-box registerd-box">
    <!-- /.login-logo -->
    <div class="login-box-body" style="display: none; top: -70px;">
      <form action="/signup" method="post" name="frmSignup" id="frmSignup">
        <img src="/dist/img/img-icon.png" alt="logo">
        <h4 style="color: #000;">Create an account</h4>
         {{#if message}}
            <div class="alert alert-success">{{message}}</div>
         {{/if}}

         {{#if errorMsg}}
            <div class="alert alert-danger">{{errorMsg}}</div>
         {{/if}}

        <div class="form-group has-feedback">
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          <input type="email" class="form-control" placeholder="Email" id="email" name="email">
        </div>
        <p>Choose Your Password</p>
        <div class="form-group pass">
          <input type="password" placeholder="Password" id="password" name="password">
          <p class="msg user_password redcolor"></p>
        </div>
        <div class="form-group pass">
          <input type="password" placeholder="Confirm Password" id="confirm_password" name="confirm_password">
          <p class="msg confirm_password redcolor"></p>
        </div>
      
      <!-- /.social-auth-links -->

        <div class="reg-main">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Register Now</button>
        </div>
      </form>

      <div class="form-group terms">
        <input type="checkbox" id="termcondition" name="termcondition">
        <label>I read and agree to the <a data-target="#myModal" data-toggle="modal" href="#">terms of use</a>.</label>
        <p class="msg termcondition redcolor"></p>
      </div>

      <div class="bot-sign up"><a href="/">Already have an account?
        <span>Sign in</span>
      </a>
    </div>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<!-- jQuery 3 -->
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/additional-methods.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- iCheck -->
<script src="/plugins/iCheck/icheck.min.js"></script>
<script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' /* optional */
    });
  });
</script>
<script>
    $(document).ready(function () {
      
      $('.login-box-body').show();
      $('.login-box-body').animate({
        'top': '0px'
      }, 500);

      $(".alert").fadeTo(2000, 500).slideUp(500, function(){
            $(".alert").slideUp(500);
        });
      $("#frmSignup").validate({
          rules: {
              email: {
                  required: true
              },
              password: {
                  required: true
              },
              confirm_password: {
                  required: true,
                  equalTo: "#password"
              },
              termcondition: {
                  required: true
              }
          },
          messages: {
              email: {
                  required: "Please enter email"
              },
              password: {
                  required: "Please enter password"
              },
              confirm_password: {
                  required: "Please enter confirm password",
                  equalTo: "Should be match with password"
              },
              termcondition: {
                  required: "Please check terms and condition box"
              }
          }
      });
    });
  </script>
</body>
</html>