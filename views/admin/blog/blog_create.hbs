<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="title-with-btn pd-612">
       <div class="pull-left">
        <h1>Create Blog Posts</h1>
    </div>
    <div class="clearfix"></div>
</div>

<ol class="breadcrumb">
  <li>
    <a href="/dashboard">
      <i class="fa fa-dashboard"></i> Home</a>
  </li>
  <li class="active">Create Blog Posts</li>
</ol>
</section>

<div class="loader"></div>

<!-- Main content -->
<section class="content container-fluid">
    <!-- Starts email-marketing -->
            <div class="email-marketing">
          <div class="box box-primary">
            <div class="box-body">
                <form name="create_blog_post_form" id="create_blog_post_form" action="" method="POST" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="blog_post_title">Post Title: </label>
                    <input type="text" class="form-control input-lg" id="blog_post_title" name="blog_post_title" placeholder="Enter Post Title" value="">
                  </div>
                </div>  

                <div class="col-md-12">
                    <div class="form-group">
                        <label for="post_slug">Post slug</label>
                         <input type="text" class="form-control input-lg" id="post_slug" name="post_slug" placeholder="Post Slug" value="">
                    </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label for="post_description">Post Description: </label>
                    {{!-- <textarea class="form-control input-lg" id="post_description" name="post_description" placeholder="Enter Post Description">{{{ post_content }}}</textarea> --}}
                    <textarea name="blog_desc" class="form-control" id="post_description" placeholder="Enter Post Description"></textarea>
                  </div>
                </div>  

                <div id="errPostDescription" class="error" style="display:none;margin-left:18px;display: inline-block;max-width: 100%;margin-bottom: 5px;font-weight: 700;font-size:16px;"></div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label for="post_featured_image">Upload Featured Image</label>
                        <input name="post_featured_image" class="form-control" id="post_featured_image" type="file">
                    </div>
                </div>

                <div class="col-md-12">
                    <label for="post_category">Post category:</label>
                    
                    <select class="form-control" id="post_category" name="post_category">
                      {{#each blog_categories}}
                        <option value="{{this.id}}">{{this.category_name}}</option>
                      {{/each}}  
                    </select>
                </div>


                <div class="col-md-12">
                  <div class="form-group">
                    <label for="meta_title">Meta Title: </label>
                    <input type="text" class="form-control input-lg" id="meta_title" name="meta_title" placeholder="Enter Meta Title" value="">
                  </div>
                </div>
                <div class="col-md-12">
                     <div class="form-group">
                        <label for="meta_description">Meta Description: </label>
                        <textarea class="form-control input-lg" id="meta_description" name="meta_description" placeholder="Enter Meta Description"></textarea>
                    </div>
                </div>
                
                {{!-- <div class="col-md-12">
                    <div class="form-group">
                        <label for="author_name">Author: </label>
                         <input type="text" class="form-control input-lg" id="author_name" name="author_name" placeholder="Enter Author Name" value="">
                    </div>
                </div> --}}
                 <div class="col-md-2 col-md-offset-5 pd-612">
                    <div class="form-group">
                        <input class="btn btn-primary save_blog" id="save_blog" value="Create Post" type="button">
                    </div>
                </div>
              </div>

              </form>

            </div>
          </div>
        </div>
    <!-- Ends email-marketing -->
</section>
<!-- /.content -->

